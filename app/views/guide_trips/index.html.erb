<p id="notice"><%= notice %></p>

<h1>Guía - viaje</h1>

<div style="width: 30rem; margin-bottom: 20px;"><input type="text" id="myInput" class="form-control" onkeyup="myFunction()" placeholder="Buscar en tabla.."></div>
<table class="table table-bordered table-hover table-striped" > 
  <thead>
    <tr>
      <th>#</th>
      <th>Id trip</th>
      <th>Id guide</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="myTable">
    <% @guide_trips.each do |guide_trip| %>
      <tr>
        <td><%= guide_trip.id %></td>
        <td><%= guide_trip.id_trip %></td>
        <td><%= guide_trip.id_guide %></td>
        <td><%= link_to 'Ver', guide_trip %></td>
        <td><%= link_to 'Editar', edit_guide_trip_path(guide_trip) %></td>
        <td><%= link_to 'Eliminar', guide_trip, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guide Trip', new_guide_trip_path %>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {    
    var value = $(this).val().toLowerCase();
    var table = document.getElementById("myTable");
    var tr = table.getElementsByTagName("tr");    
  
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>