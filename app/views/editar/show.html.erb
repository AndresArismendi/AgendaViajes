<h1>Guías turísticos</h1>

<div style="width: 30rem; margin-bottom: 20px;"><input type="text" id="myInput" class="form-control" onkeyup="myFunction()" placeholder="Buscar en tabla.."></div>
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>    
      <th scope="col">#</th>
      <th scope="col">Correo</th>
      <th scope="col">Nombre</th>
      <th scope="col">Rut</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Tipo de vehículo</th>
      <th scope="col">usuario</th>
      <th scope="col">Admin</th>      
    </tr>
  </thead>
  <% contador = 1 %>
  <tbody id="myTable">
    <% @sessions.each do |session| %>
    <tr>
    	<% if session.status == 0 %>
        <td> <%= contador %></td>
        <td><%= session.email %></td>
        <td><%= session.nombre %></td>
        <td><%= session.rut %></td>
        <td><%= session.fono %></td>
        <td><%= session.tipo_vehiculo %></td>
        <td>guía turístico</td>
        <td><%= session.admin %></td>
        <% contador += 1 %>        
      <% end %>
    </tr>  
  <% end %>
  </tbody>
</table>

<script type="text/javascript">
  var menuFlag = 2;
</script>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {    
    var value = $(this).val().toLowerCase();
    var table = document.getElementById("myTable");
    var tr = table.getElementsByTagName("tr");    
  
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
