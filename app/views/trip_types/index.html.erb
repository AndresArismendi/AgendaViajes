<p id="notice"><%= notice %></p>

<h1>Tipos de viajes</h1>

<div style="width: 30rem; margin-bottom: 20px;"><input type="text" id="myInput" class="form-control" onkeyup="myFunction()" placeholder="Buscar en tabla.."></div>
<table class="table table-bordered table-hover table-striped" > 
  <thead>
    <tr>
      <th>#</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="myTable">
    <% @trip_types.each do |trip_type| %>
      <tr>
        <td><%= trip_type.id %></td>
        <td><%= trip_type.nombre %></td>
        <td style="max-width: 20px;"><%= link_to 'Ver', trip_type, class: "btn btn-default" %></td>
        <td style="max-width: 20px;"><%= link_to 'Editar', edit_trip_type_path(trip_type), {style: "color: #fff;",class: "btn btn-warning"} %></td>
        <td style="max-width: 20px;"><%= link_to 'Eliminar', trip_type, method: :delete, data: { confirm: '¿Estás seguro?' }, style: "color: #fff;", class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo tipo de viaje', new_trip_type_path, {class: "btn btn-success", style: "color: #fff;" } %>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {    
    var value = $(this).val().toLowerCase();
    var table = document.getElementById("myTable");
    var tr = table.getElementsByTagName("tr");    
  
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
