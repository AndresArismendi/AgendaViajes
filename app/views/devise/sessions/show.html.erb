<% provide(:title, "Edit session") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-striped">
      <tr>
        <th>Id</th>
        <th>Correo</th>
        <th>Estado</th>
        <th>Administrador</th>      
        
        <th></th>
      </tr>
      <% @sessions.each do |session| %>
      <tr>
        <td><%= session.id %></td>
        <td><%= session.email %></td>
        <td><%= session.status %></td>
        <td><%= session.admin %></td>                
        
        <td style="width: 1px; white-space: nowrap">
          <%= link_to 'Editar', edit_session_path(session), class: 'btn btn-primary btn-sm' %>
        </td>
      </tr>
      <% end %>
    </table>

  </div>
</div>