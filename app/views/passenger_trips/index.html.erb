<p id="notice"><%= notice %></p>
<h1>Passenger Trips</h1>
<div style="width: 30rem; margin-bottom: 20px;"><input type="text" id="myInput" class="form-control" onkeyup="myFunction()" placeholder="Buscar en tabla.."></div>
<table class="table table-bordered table-hover table-striped" > 
  <thead>
    <tr>
      <th>#</th>
      <th>Id passenger</th>
      <th>Id trip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="myTable">
    <% @passenger_trips.each do |passenger_trip| %>
      <tr>
        <td><%= passenger_trip.id %></td>
        <td><%= passenger_trip.id_passenger %></td>
        <td><%= passenger_trip.id_trip %></td>
        <td><%= link_to 'Ver', passenger_trip %></td>
        <td><%= link_to 'Editar', edit_passenger_trip_path(passenger_trip) %></td>
        <td><%= link_to 'Eliminar', passenger_trip, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Passenger Trip', new_passenger_trip_path, class: "btn btn-success", style: "color: #fff;" %>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {    
    var value = $(this).val().toLowerCase();
    var table = document.getElementById("myTable");
    var tr = table.getElementsByTagName("tr");    
  
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>